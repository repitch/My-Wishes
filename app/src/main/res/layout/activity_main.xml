<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.repitch.mywishes.ui.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_wishes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/empty_wishes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/offset"
        android:drawableTop="@drawable/ic_do_not_disturb_black_24dp"
        android:text="К сожалению, у Вас еще нет желаний"
        android:textAppearance="@style/Text.Default.Light"
        android:visibility="gone"
        tools:visibility="visible"/>

</FrameLayout>
